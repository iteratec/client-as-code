{
  "name": "client-as-code",
  "version": "0.0.1",
  "description": "Talk about provisioning your client system",
  "dependencies": {
    "reveal-md": "^3.0.4"
  },
  "scripts": {
    "start": "reveal-md slides.md",
    "build": "reveal-md slides.md --static",
    "pdf": "reveal-md slides.md --print slides.pdf",
    "dev": "reveal-md slides.md -w --disable-auto-open",
    "release": "f(){ npm run build && npm run pdf && git checkout gh-pages && cp -fr _static/. . && git add -A && git add --force slides.pdf && git commit -m \"${@}\" && git checkout -; }; f"
  },
  "keywords": [
    "slides",
    "reveal.js",
    "talk",
    "presentation",
    "provisioning",
    "IaC",
    "Infrastructure as Code",
    "Ansible",
    "Vagrant",
    "VirtualBox"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sberlin/client-as-code.git"
  },
  "bugs": {
    "url": "https://github.com/sberlin/client-as-code/issues"
  }
}
